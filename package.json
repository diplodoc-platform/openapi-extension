{
  "name": "@diplodoc/openapi-extension",
  "version": "1.0.19",
  "description": "OpenAPI plugin for Diplodoc transformer and builder",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "production": "./plugin/index.min.js",
      "development": "./plugin/index.js",
      "default": "./plugin/index.min.js"
    },
    "./includer": {
      "node": "./includer/index.js"
    },
    "./runtime": {
      "production": "./runtime/index.min.js",
      "development": "./runtime/index.js",
      "default": "./runtime/index.min.js"
    },
    "./runtime/styles": {
      "production": "./runtime/index.min.css",
      "development": "./runtime/index.css",
      "default": "./runtime/index.min.css"
    }
  },
  "scripts": {
    "build": "run-p build:*",
    "build:plugin": "node esbuild",
    "build:includer": "swc --only src/types.ts src/includer/**/* src/includer/* --out-dir .",
    "build:declarations": "tsc --emitDeclarationOnly --outDir .",
    "prepublish": "npm run build",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "diplodoc",
    "markdown-it"
  ],
  "license": "ISC",
  "files": [
    "plugin",
    "runtime",
    "includer",
    "types.js",
    "types.d.ts"
  ],
  "peerDependencies": {
    "@gravity-ui/uikit": "^4.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@doc-tools/transform": "^2.16.4",
    "@gravity-ui/uikit": "^4.8.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.60",
    "@types/html-escaper": "^3.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/json-schema": "^7.0.11",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/markdown-it": "^12.2.3",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "babel-preset-env": "^1.7.0",
    "esbuild": "^0.17.12",
    "esbuild-sass-plugin": "^2.8.0",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "markdown-it": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "html-escaper": "^3.0.3",
    "http-status-codes": "^2.2.0",
    "js-yaml": "^4.1.0",
    "json-schema": "^0.4.0",
    "json-stringify-safe": "^5.0.1",
    "slugify": "^1.6.6"
  }
}
